<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryansteckler.nlpunbounce" >

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Unbounce"
        android:theme="@style/UnbounceTheme">
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="42" />
        <meta-data
            android:name="xposeddescription"
            android:value="Control alarms and wakelocks" />

        <activity
            android:name=".SettingsActivity"
            android:label="Unbounce settings" >
        </activity>

        <receiver
            android:name=".ActivityReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ryansteckler.nlpunbounce.INCREMENT_BLOCK_COUNT" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.ryansteckler.nlpunbounce.SEND_STATS" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MaterialSettingsActivity"
            android:label="@string/title_activity_material_settings" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="de.robv.android.xposed.category.MODULE_SETTINGS" />
            </intent-filter>
        </activity>

        <activity-alias
            android:enabled="true"
            android:name="com.ryansteckler.nlpunbounce.Settings-Alias"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:targetActivity="com.ryansteckler.nlpunbounce.MaterialSettingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>
    </application>

</manifest>
