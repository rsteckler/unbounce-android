<resources>

    <!-- Base application theme. -->
    <style name="UnbounceThemeLight" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/UnbounceActionBar</item>
        <item name="activityRootBackground">#dddddd</item>
        <item name="cardBackground">@drawable/card_background_light</item>
        <item name="cardText">@style/TextBody1</item>
        <item name="cardTextValues">@style/TextBody1Fade</item>
        <item name="background_primary">#009688</item>
        <item name="background_primary_shaded">#00796b</item>

        <item name="background_secondary">#FF9800</item>
        <item name="background_secondary_faded">#ffb74d</item>
        <item name="background_secondary_shaded">#ef6c00</item>

        <item name="background_gray">#9E9E9E</item>

        <item name="background_three">#FF5722</item>

        <item name="background_four">#9c27b0</item>
        <item name="background_four_faded">#ba68c8</item>
        <item name="background_four_shaded">#7b1fa2</item>

        <item name="background_panel_disabled">#e0e0e0</item>
        <item name="background_panel_enabled">#ffffff</item>
        <item name="reset_button_background">@drawable/flat_button_background</item>

    </style>

    <style name="UnbounceThemeDark" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/UnbounceActionBar</item>
        <item name="activityRootBackground">#000000</item>
        <item name="cardBackground">@drawable/card_background_dark</item>
        <item name="cardText">@style/TextBody1_dark</item>
        <item name="cardTextValues">@style/TextBody1Fade_dark</item>
        <item name="background_primary">#009688</item>
        <item name="background_primary_shaded">#333333</item>

        <item name="background_secondary">#FF9800</item>
        <item name="background_secondary_faded">#ffb74d</item>
        <item name="background_secondary_shaded">#ef6c00</item>

        <item name="background_gray">#9E9E9E</item>

        <item name="background_three">#FF5722</item>

        <item name="background_four">#9c27b0</item>
        <item name="background_four_faded">#ba68c8</item>
        <item name="background_four_shaded">#7b1fa2</item>

        <item name="background_panel_disabled">#e0e0e0</item>
        <item name="reset_button_background">@drawable/flat_button_background_dark</item>
    </style>



    <!-- general styles for the action bar -->
    <style name="UnbounceActionBar" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/background_primary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider_dark">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TextBody1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextBody1_dark">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextBody1Light">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextBody1Fade">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="TextBody1Fade_dark">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="TextBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody2Light">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="TextCaptionLight">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextTitleLight">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextButtonLight">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.87</item>
    </style>

</resources>
