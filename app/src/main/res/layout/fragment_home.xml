<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryansteckler.nlpunbounce.MaterialSettingsActivity.HomeFragment"
    android:id="@+id/home_container"
    android:background="#dddddd">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/card_external_padding"
                android:layout_marginRight="@dimen/card_external_padding"
                android:background="@drawable/card_background"
                android:layout_marginTop="@dimen/card_external_padding">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_primary_shaded"
                    android:paddingLeft="@dimen/card_internal_padding"
                    android:paddingTop="@dimen/card_internal_padding"
                    android:paddingBottom="@dimen/card_internal_padding">

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:src="@drawable/ic_local" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/lb_local"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:text="@string/local_text"
                            style="@style/TextTitleLight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your device stats"
                            android:layout_marginLeft="@dimen/pad_icon"
                            style="@style/TextCaptionLight" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RESET"
                        android:id="@+id/buttonResetStats"
                        android:background="@drawable/flat_button_background"
                        style="@style/TextButtonLight"
                        android:paddingRight="@dimen/flat_button_long_padding"
                        android:paddingTop="@dimen/card_external_padding"
                        android:paddingBottom="@dimen/card_external_padding"
                        android:paddingLeft="@dimen/card_external_padding"
                        android:alpha="1"
                        android:gravity="center_vertical" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="@dimen/card_internal_padding">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Stats collected for"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="26d 17h 47m 39s"
                            android:id="@+id/textRunningSince"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelock time allowed"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="26d 17h 47m 39s"
                            android:id="@+id/textLocalWakeTimeAllowed"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelock time blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="52d 4h 41m 36s"
                            android:id="@+id/textLocalWakeTimeBlocked"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelocks acquired"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="4,793,202"
                            android:id="@+id/textLocalWakeAcquired"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelocks blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="953,664"
                            android:id="@+id/textLocalWakeBlocked"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Alarms fired"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="87,499"
                            android:id="@+id/textLocalAlarmsAcquired"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Alarms blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/TextBody1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="43,224"
                            android:id="@+id/textLocalAlarmsBlocked"
                            android:gravity="center_vertical"
                            style="@style/TextBody1Fade" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/card_external_padding"
                android:layout_marginRight="@dimen/card_external_padding"
                android:background="@drawable/card_background"
                android:layout_marginTop="@dimen/card_external_padding"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_primary_shaded"
                    android:paddingLeft="@dimen/card_internal_padding"
                    android:paddingTop="@dimen/card_internal_padding"
                    android:paddingBottom="@dimen/card_internal_padding" >

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:src="@drawable/ic_global" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/TextTitleLight"
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:text="@string/global_text" />

                        <TextView
                            style="@style/TextCaptionLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our combined stats"
                            android:layout_marginLeft="@dimen/pad_icon" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="@dimen/card_internal_padding" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelock time allowed"
                            android:gravity="center_vertical"
                            android:layout_weight="1" />

                        <TextView
                            style="@style/TextBody1Fade"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="26d 17h 47m 39s"
                            android:id="@+id/textGlobalWakelockDurationAllowed"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelock time blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1" />

                        <TextView
                            style="@style/TextBody1Fade"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="52d 4h 41m 36s"
                            android:id="@+id/textGlobalWakelockDurationBlocked"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelocks acquired"
                            android:gravity="center_vertical"
                            android:layout_weight="1" />

                        <TextView
                            style="@style/TextBody1Fade"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="4,793,202"
                            android:id="@+id/textGlobalWakelockAllowed"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Wakelocks blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1" />

                        <TextView
                            style="@style/TextBody1Fade"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="953,664"
                            android:id="@+id/textGlobalWakelockBlocked"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Alarms fired"
                            android:gravity="center_vertical"
                            android:layout_weight="1" />

                        <TextView
                            style="@style/TextBody1Fade"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="87,499"
                            android:id="@+id/textGlobalAlarmAllowed"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Alarms blocked"
                            android:gravity="center_vertical"
                            android:layout_weight="1" />

                        <TextView
                            style="@style/TextBody1Fade"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="43,224"
                            android:id="@+id/textGlobalAlarmBlocked"
                            android:gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/card_background"
                android:layout_marginTop="@dimen/card_external_padding"
                android:layout_marginRight="@dimen/card_external_padding"
                android:layout_marginLeft="@dimen/card_external_padding">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="end"
                    android:background="@color/background_primary_shaded"
                    android:padding="@dimen/card_internal_padding">

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:src="@drawable/ic_gift" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:text="@string/donate_text"
                            style="@style/TextTitleLight" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Support your local developer"
                            android:layout_marginLeft="@dimen/pad_icon"
                            style="@style/TextCaptionLight" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:padding="@dimen/card_internal_padding"
                        android:id="@+id/layoutDonate"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This app will always let you fix the Network Location Provider battery killers for free.  If you'd also like to Unbounce other wakelocks and alarms, you can upgrade to the Pro features by supporting the project below.  Any donation amount will unlock the Pro features."
                            style="@style/TextBody1"
                            android:layout_marginBottom="@dimen/card_internal_padding" />

                        <View style="@style/Divider"
                            android:layout_marginBottom="@dimen/card_internal_padding" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/separator_pad"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:id="@+id/buttonKarma1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="A cup of coffee while I write code"
                                android:layout_weight="1"
                                style="@style/TextBody1"
                                android:gravity="center_vertical" />

                            <ImageView
                                android:layout_width="@dimen/sub_icon_size"
                                android:layout_height="@dimen/sub_icon_size"
                                android:src="@drawable/ic_donate_1"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/separator_pad"
                            android:layout_marginBottom="@dimen/separator_pad"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:id="@+id/buttonKarma5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="A latte while I answer forum questions"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                style="@style/TextBody1" />

                            <ImageView
                                android:layout_width="@dimen/sub_icon_size"
                                android:layout_height="@dimen/sub_icon_size"
                                android:src="@drawable/ic_donate_5"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/separator_pad"
                            android:layout_marginBottom="@dimen/separator_pad"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:id="@+id/buttonKarma10">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="The joy of not carrying your charger"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                style="@style/TextBody1" />

                            <ImageView
                                android:layout_width="@dimen/sub_icon_size"
                                android:layout_height="@dimen/sub_icon_size"
                                android:src="@drawable/ic_donate_10"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/card_internal_padding"
                        android:id="@+id/layoutDonateAgain"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thank you for your donation.  It means a lot to me.  I work hard in my limited free time to bring you better battery life.  When you donated, you made a difference to the project, and made a difference in my family's life.  You rock.  \nI've been asked if people can further support the project after donation.  The buttons below let you donate further, but don't provide any additional features.\n-Ryan"
                            style="@style/TextBody1"
                            android:padding="@dimen/card_internal_padding" />

                        <View style="@style/Divider"
                            android:layout_marginBottom="@dimen/card_internal_padding" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/separator_pad"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:id="@+id/buttonKarma1Again">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="A cup of coffee while I read the bug list"
                                android:layout_weight="1"
                                style="@style/TextBody1"
                                android:gravity="center_vertical" />

                            <ImageView
                                android:layout_width="@dimen/sub_icon_size"
                                android:layout_height="@dimen/sub_icon_size"
                                android:src="@drawable/ic_donate_1"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/separator_pad"
                            android:layout_marginBottom="@dimen/separator_pad"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:id="@+id/buttonKarma5Again">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="A latte while I code new features"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                style="@style/TextBody1" />

                            <ImageView
                                android:layout_width="@dimen/sub_icon_size"
                                android:layout_height="@dimen/sub_icon_size"
                                android:src="@drawable/ic_donate_5"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/separator_pad"
                            android:layout_marginBottom="@dimen/separator_pad"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:id="@+id/buttonKarma10Again">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:text="A month of unlimited music!"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                style="@style/TextBody1" />

                            <ImageView
                                android:layout_width="@dimen/sub_icon_size"
                                android:layout_height="@dimen/sub_icon_size"
                                android:src="@drawable/ic_donate_10"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_three"
        android:visibility="gone"
        android:id="@+id/banner"
        android:layout_marginTop="80sp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                style="@style/TextTitleLight"
                android:padding="@dimen/card_internal_padding"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/textviewCloseBanner"
                style="@style/TextTitleLight"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/card_internal_padding"
                android:clickable="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can block wakelocks to stop your phone from staying awake, and block alarms to stop it from waking up in the first place.  We've already set up some battery saving defaults for you."
            android:layout_margin="@dimen/card_internal_padding"
            style="@style/TextTitleLight" />

    </LinearLayout>


</FrameLayout>
